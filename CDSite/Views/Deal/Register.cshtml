@model CDSite.Models.DealRegisterViewModel
@{
    ViewBag.Title = "Register";
}

<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm("Register", "Deal", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    if (Model.IsCodeAvailable)
    {
    @Html.AntiForgeryToken()
    <h4>Create a new account.</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <h4 class="col-lg-4">
        Thank you for choosing a coupon for <strong>@Model.Title</strong>
    </h4>
   <br />
   <br />
    @Html.HiddenFor(m => m.OfferToken)
    <div class="col-lg-3">
        Please enter your email address.
    </div>
    <br />
    <div class="form-group">
        @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
        </div>
    </div>
    <div class="col-lg-4">
        @Model.Description
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Register" />
        </div>
    </div>
    }
    else
    {
        <p class="alert alert-warning" role="alert"> Sorry. There are no codes available for @Model.Title at this time :(</p>
    }
    }

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

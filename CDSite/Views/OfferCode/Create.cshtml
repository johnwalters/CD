@model CDSite.Models.OfferCodeViewModel
@{
    ViewBag.Title = "Create Offer Code";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create Offer Code</title>
</head>
<body>
@using (Html.BeginForm("Edit", "OfferCode", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
            <div><h1>Create Offer Code: </h1></div>
            <div class="form-group">
                @Html.LabelFor(m => m.Code, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.Code, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Code, "", new { @class = "text-danger" })
                </div>
            </div>
            @Html.HiddenFor(m => m.OfferId)
            @Html.HiddenFor(m => m.Id)
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" class="btn btn-default" value="Submit" />
                </div>
            </div>
}
</body>
</html>
